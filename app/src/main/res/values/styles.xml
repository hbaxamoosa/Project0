<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
    </style>

    <style name="buttons" parent="AppTheme">
        <item name="android:layout_width">@dimen/project0_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#F08C35</item>
    </style>

    <style name="button_capstone" parent="buttons">
        <item name="android:background">#fe0000</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
